# __PROJECT_NAME__ Server Environment Variables
# Copy this file to .env and fill in the values

# Application
APP_NAME=__PROJECT_NAME__
APP_ENV=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# MongoDB — local dev database (started by docker-compose or manually)
# These match the docker-compose mongodb service defaults.
# In production, the platform injects these via ExternalSecret.
# Uncomment these lines if your app uses MongoDB (see server/app/db.py).
# MONGO_URI=mongodb://localhost:27017
# MONGO_USERNAME=dev
# MONGO_PASSWORD=dev

# Auth (Ory Kratos) — set AUTH_ENABLED=true when deployed to the platform
AUTH_ENABLED=false
KRATOS_PUBLIC_URL=http://localhost:4433
APP_URL=http://localhost:3000
# COOKIE_SECURE=true  # enable in production (HTTPS)

# External APIs (add your API keys here)
# OPENAI_API_KEY=
# STRIPE_API_KEY=
